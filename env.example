# Redis Configuration (for BullMQ)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
# For local development:
# REDIS_HOST=localhost

# ComfyUI Configuration (external ComfyUI server)
COMFYUI_BASE_URL=http://host.docker.internal:8188
COMFYUI_API_TIMEOUT=30000
# For local development:
# COMFYUI_BASE_URL=http://localhost:8188

# Worker Configuration
WORKER_CONCURRENCY=1
POLLING_INTERVAL=1000
MAX_RETRIES=3

# Image Storage
IMAGE_STORAGE_TYPE=base64
# For file storage (alternative to base64)
# IMAGE_STORAGE_PATH=/path/to/images
# IMAGE_BASE_URL=http://localhost:3000/images

# PM2 Configuration
NODE_ENV=production
PM2_LOG_LEVEL=info
PM2_MAX_MEMORY=1G
